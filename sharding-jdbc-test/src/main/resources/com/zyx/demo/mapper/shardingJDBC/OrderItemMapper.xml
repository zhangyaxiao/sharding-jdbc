<?xml version="1.0" encoding="UTF-8"?>
<!-- 不写会报错 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.shardingjdbc.dao.OrderItemDao">
    <!-- 自定义返回结果集 -->
    <resultMap id="OrderMap" type="io.shardingjdbc.po.OrderItemPO">
        <id property="item_id" column="item_id" javaType="java.lang.Integer"></id>
        <result property="order_id" column="order_id" javaType="java.lang.Integer"></result>
        <result property="user_id" column="user_id" javaType="java.lang.Integer"></result>
    </resultMap>

    <insert id="insertOrder" useGeneratedKeys="true" keyProperty="item_id">
        insert into t_order_item (item_id,order_id,user_id) values (#{item_id},#{order_id},#{user_id})
    </insert>

    <update id="updateOrder" >
        update t_order_item set user_id=#{user_id},order_id=#{order_id} where item_id=#{item_id}
    </update>

    <delete id="deleteOrder" parameterType="int">
        delete from t_order_item where item_id=#{item_id}
    </delete>

    <select id="selectOrderById" parameterType="int" resultMap="OrderMap">
        select * from t_order_item where item_id=#{item_id}
    </select>

    <select id="selectAllOrder" resultMap="OrderMap">
        select * from t_order_item
    </select>

</mapper>